= div_for comment do
  %p
    = comment.body
  %p
    %strong
      Posted #{time_ago_in_words(comment.created_at)} ago
  %br/
  = comment.commenter

  %p
    = link_to 'Destroy Comment', [comment.article, comment],        |
                                 method: :delete,                   |
                                 data: { confirm: 'Are you sure?' } |
