= div_for comment do
  %h4
    = comment.commenter
  %p
    %strong
      Posted #{time_ago_in_words(comment.created_at)} ago
  %p
    = comment.body

  %p
    = link_to 'Destroy Comment', article_comment_path(comment.article, comment), method: :delete, remote: true, data: { confirm: 'Are you sure?' }
