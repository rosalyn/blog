%div.comment.clearfix
  = div_for(comment, :class => "comment_content") do
    %div.row
      %div.col-md-4.col-sm-4.col-xs-4
        %h4.comment_name
          = comment.commenter
      %div.col-md-8.col-sm-8.col-xs-8
        %p.comment_time
          %strong
            #{time_ago_in_words(comment.created_at)} ago
    
    %p.comment_body
      = comment.body

    - if user_signed_in?
      %p
        = link_to 'Delete', article_comment_path(comment.article, comment), method: :delete, class: "button", remote: true, data: { confirm: 'Are you sure?' }