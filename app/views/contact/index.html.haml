%header.navbar.navbar-inverse.navbar-fixed-top.bs-docs-nav{:role => "banner"}
  %div.container
    %div.navbar-header
      %button.navbar-toggle{:type => "button", "data-toggle" => "collapse", "data-target" => ".bs-navbar-collapse"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => root_path} enjoymyvibes
    %nav.collapse.navbar-collapse.bs-navbar-collapse{:role => "navigation"}
      %form.navbar-form.navbar-right{:role => "search"}
        %div.form-group
          %input.form-control{:type => "text", :placeholder => "Search"}
        %button.btn.btn-default{:type => "submit"} Submit
      %ul.nav.navbar-nav
        %li
          = link_to "Home", root_path
        %li.active
          = link_to "Contact", contact_path
        %li
          = link_to "About", about_path

%div.container
  %h1 Contact Me
  %div.well
    %p.lead
      Do you have any questions? Please use the contact form below and send a message. I'll get back to you as quick as possible.
  %div.contact-form
    = form_tag("index.html", class: "form-horizontal col-md-8", role: "form") do
      %div.form-group
        %label{:for => "name", :class => "col-md-2"} Name
        %div.col-md-10
          %input{:type => "text", :class => "form-control", :placeholder => "Name", :id => "name"}
      %div.form-group
        %label{:for => "email", :class => "col-md-2"} Email
        %div.col-md-10
          %input{:type => "email", :class => "form-control", :placeholder => "Email", :id => "email"}
      %div.form-group
        %label{:for => "subject", :class => "col-md-2"} Subject
        %div.col-md-10
          %input{:type => "subject", :class => "form-control", :placeholder => "Subject", :id => "subject"}
      %div.form-group
        %label{:for => "message", :class => "col-md-2"} Message
        %div.col-md-10
          %textarea{:class => "form-control", :placeholder => "Message", :id => "message"}
      %div.form-group
        %div.col-md-12.text-right
          %button{:type => "submit", :class => "btn btn-lg btn-primary"} Submit your message!
