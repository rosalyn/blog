= form_for @article, :html => {:multipart => true} do |f|

  - if @article.errors.any?
    %div#errors
      %h2
        = pluralize(@article.errors.count, "error")
        prohibited
        this article from being saved:
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  %p
    = f.label :title
    %br/
    = f.text_field :title

  %p
    = f.file_field :image

  %p
    = f.label :text
    %br/
    = f.text_area :text

  %p
    = f.submit

  %p
    = button_tag "Cancel", :type => "cancel", :class => "button", :name => "cancel"
